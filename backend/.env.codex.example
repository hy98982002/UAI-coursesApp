# ===================
# Django 基础配置
# ===================
SECRET_KEY=django-insecure-your-secret-key-change-this-in-production
DEBUG=True
# Codex 环境允许的主机（包含常见的云IDE域名）
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,*.codex.io,*.gitpod.io,*.codesandbox.io

# ===================
# Sealos MySQL 数据库配置
# ===================
MYSQL_NAME=test-db-mysql-0
MYSQL_USER=root
MYSQL_PASSWORD=4mhgzmwn
MYSQL_HOST=dbconn.sealosbia.site
MYSQL_PORT=48214
MYSQL_CHARSET=utf8mb4

# ===================
# 数据库连接优化（Codex 环境推荐）
# ===================
# 增加超时时间以适应网络延迟
MYSQL_CONNECT_TIMEOUT=120
MYSQL_READ_TIMEOUT=120
MYSQL_WRITE_TIMEOUT=120

# ===================
# 国际化配置
# ===================
TIME_ZONE=Asia/Shanghai
LANGUAGE_CODE=zh-hans

# ===================
# CORS 配置（开发环境）
# ===================
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOW_CREDENTIALS=True

# ===================
# 特殊说明
# ===================
# 1. SECRET_KEY 必须修改为随机生成的密钥
# 2. 生产环境请将 DEBUG 设置为 False
